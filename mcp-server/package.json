{
  "name": "degov-mcp",
  "version": "0.0.1",
  "description": "Degov mcp server",
  "scripts": {
    "dev": "ts-node --files src/index.ts",
    "build": "tsc -b && shx mkdir -p build/generated && shx cp -r src/generated/prisma build/generated && shx cp -r src/views build/",
    "start": "node build/index.js",
    "lint": "eslint . --ext .ts --fix",
    "package": "npm run build && ncc build build/index.js -o dist --source-map --minify",
    "mcp:inspector": "npx @modelcontextprotocol/inspector"
  },
  "dependencies": {
    "@akashrajpurohit/snowflake-id": "^2.0.0",
    "@fastify/view": "^11.1.0",
    "@joggr/fastify-prisma": "^6.0.0",
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@prisma/client": "6.9.0",
    "@specter-labs/fastify-cache": "^1.0.3",
    "@twitter-api-v2/plugin-rate-limit": "^1.1.0",
    "@twitter-api-v2/plugin-token-refresher": "^1.0.0",
    "axios": "^1.9.0",
    "config": "^4.0.0",
    "fastify": "^5.3.3",
    "fastify-axios": "^1.3.0",
    "fastify-mcp": "^2.0.1",
    "graphql-request": "^7.2.0",
    "graphql-tag": "^2.12.6",
    "handlebars": "^4.7.8",
    "pino-pretty": "^13.0.0",
    "reflect-metadata": "^0.2.2",
    "toad-scheduler": "^3.1.0",
    "twitter-api-v2": "^1.23.2",
    "typedi": "^0.10.0",
    "viem": "^2.30.6",
    "yaml": "^2.8.0",
    "zod": "^3.25.50"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.13.0",
    "@types/config": "^3.3.5",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.29",
    "@vercel/ncc": "^0.38.3",
    "dotenv": "^16.5.0",
    "jest": "^29.7.0",
    "prisma": "^6.9.0",
    "shx": "^0.4.0",
    "tailwindcss": "^4.1.8",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
