  {{else}}
  <meta property="og:image" content="{{dao.links.website}}{{dao.config.logo}}">
  {{/if}}
  {{else}}
  <meta property="og:image" content="https://degov.ai/assets/degov-social-preview.png">
  {{/if}}
  {{else}}
  <meta property="og:image" content="https://degov.ai/assets/degov-social-preview.png">
  {{/if}}
  <meta property="og:site_name" content="DeGov AI">

