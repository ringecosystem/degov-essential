  <meta name="twitter:site" content="@DeGovAI">
  <meta name="twitter:creator" content="@DeGovAI">
  <meta name="twitter:title"
    content="{{#if tweet}}{{dao.name}} - {{/if}}DeGov Agent voting comment details">
  <meta name="twitter:description"
    content="{{#if tweet}}🤖 AI Analysis: {{#if fulfilled_explain.output.finalResult}}{{fulfilled_explain.output.finalResult}}{{else}}Analyzing{{/if}} | 🎯 Confidence: {{#if fulfilled_explain.output.confidence}}{{fulfilled_explain.output.confidence}}/10{{else}}High{{/if}} | 📊 Multi-source governance intelligence for {{dao.name}}{{else}}Autonomous governance decisions powered by multi-source intelligence{{/if}}">
  {{#if tweet}}
  {{#if dao.config.logo}}
  {{#if (or (startsWith dao.config.logo "http://") (startsWith dao.config.logo "https://"))}}
  <meta name="twitter:image" content="{{dao.config.logo}}">
  {{else}}
  <meta name="twitter:image" content="{{dao.links.website}}{{dao.config.logo}}">
  {{/if}}
  {{else}}
  <meta name="twitter:image" content="https://degov.ai/images/og.png">
  {{/if}}
  {{else}}
  <meta name="twitter:image" content="https://degov.ai/images/og.png">
  {{/if}}

  <!-- Additional Meta -->
  <meta name="robots" content="index, follow">
  <meta name="author" content="DeGov AI">
  <meta name="keywords"
    content="{{#if tweet}}{{dao.name}}, {{/if}}governance, AI, blockchain, voting, DAO, decision making, DeGov, autonomous agents">

