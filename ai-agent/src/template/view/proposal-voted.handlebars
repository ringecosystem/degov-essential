    }

    @media (max-width: 480px) {
      /* Extra small screens optimization (320px - 480px) */
      body {
        padding: 8px;
      }

      .header {
        padding: 20px 15px;
      }

      .header-text h1 {
        font-size: 1.5rem;
      }

      .header-text p {
        font-size: 0.9rem;
      }

      .content {
        padding: 15px;
      }

      .proposal-card {
        padding: 15px;
      }

      .proposal-header {
        padding: 15px;
      }

      .proposal-title h3 {
        font-size: 1.2rem;
      }

      .proposal-hash {
        font-size: 0.8rem;
      }

      .meta-item {
        padding: 10px;
      }

      .vote-category {
        padding: 12px;
      }

      .final-decision {
        padding: 15px;
      }

      .reasoning-summary {
        padding: 12px;
      }

      .reasoning-full {
        padding: 15px;
      }
    }

    @keyframes slideInFromTop {
      from {
        opacity: 0;
        transform: translateY(-20px);
      }

      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
  </style>
</head>

<body>
  {{#if tweet}}
  <div class="container">
    <div class="header">
      <div class="header-content">
        {{#if dao.config.logo}}
        {{#if (or (startsWith dao.config.logo "http://") (startsWith dao.config.logo "https://"))}}
        <img src="{{dao.config.logo}}" alt="{{dao.name}} Logo" class="header-logo">
        {{else}}
        <img src="{{dao.links.website}}{{dao.config.logo}}" alt="{{dao.name}} Logo" class="header-logo">
        {{/if}}
        {{else}}
        <span class="header-emoji">🗳️</span>
        {{/if}}
        <div class="header-text">
          <h1>DeGov Agent voting comment details</h1>
          <p>Autonomous governance decisions powered by multi-source intelligence</p>
        </div>
      </div>
    </div>

    <div class="content">
      <div class="proposal-card">
        <div class="proposal-header">
          <div class="proposal-info">
            <div class="proposal-title">
              <h3>📋 Proposal Analysis</h3>
              <div class="proposal-subtitle">AI-powered governance decision analysis</div>
            </div>
            <div class="proposal-id-container">
              <div class="proposal-id-label">Proposal ID</div>
              <div class="proposal-id">
                {{#if dao.links.website}}
                <a href="{{dao.links.website}}/proposal/{{proposal_id}}" target="_blank" class="proposal-link">
                  <span class="proposal-hash">{{proposal_id}}</span>
                  <svg class="external-link-icon" viewBox="0 0 20 20" fill="currentColor">
                    <path
                      d="M11 3a1 1 0 100 2h2.586l-6.293 6.293a1 1 0 101.414 1.414L15 6.414V9a1 1 0 102 0V4a1 1 0 00-1-1h-5z">
                    </path>
                    <path d="M5 5a2 2 0 00-2 2v6a2 2 0 002 2h6a2 2 0 002-2v-2a1 1 0 10-2 0v2H5V7h2a1 1 0 000-2H5z">
                    </path>
                  </svg>
                </a>
                {{else}}
                <div class="proposal-link">
                  <span class="proposal-hash">{{proposal_id}}</span>
                </div>
                {{/if}}
              </div>
            </div>
          </div>
          <div class="status-container">
            {{!-- <div class="status-label">Status</div> --}}
            <span class="status-badge status-{{status}}">
              {{#if (eq status "defeated")}}
              ❌ {{status}}
              {{else if (eq status "succeeded")}}
              ✅ {{status}}
              {{else if (eq status "active")}}
              🔄 {{status}}
              {{else}}
              {{status}}
              {{/if}}
            </span>
          </div>
        </div>

        <div class="meta-info">
          <div class="meta-item">
            <div class="meta-label">Chain</div>
            <div class="meta-value">{{dao.config.chain.name}}</div>
          </div>
          <div class="meta-item">
            <div class="meta-label">Tweet</div>
            <div class="meta-value">
              <a href="https://x.com/user/status/{{id}}" target="_blank">{{id}}</a>
            </div>
          </div>
          <div class="meta-item">
            <div class="meta-label">DAO</div>
            <div class="meta-value">
              <a href="{{dao.links.website}}" target="_blank">{{dao.name}}</a>
            </div>
          </div>
          <div class="meta-item">
            <div class="meta-label">Created</div>
            <div class="meta-value">{{formatDate ctime}}</div>
          </div>
        </div>

        {{#if fulfilled_explain.output}}
        <div class="analysis-section">
          <h3 class="section-title">📊 Vote Analysis</h3>

          <div class="voting-breakdown">
            <!-- Twitter Poll -->
            <div class="vote-category">
              <div class="category-header">🐦 Twitter Poll</div>
              {{#with fulfilled_explain.output.votingBreakdown.twitterPoll}}
              <div class="vote-bar">
                {{#if (gt (add for against abstain) 0)}}
                <div class="vote-for" style="width: {{percentage for (add for against abstain)}}%"></div>
                <div class="vote-against" style="width: {{percentage against (add for against abstain)}}%"></div>
                <div class="vote-abstain" style="width: {{percentage abstain (add for against abstain)}}%"></div>
                {{/if}}
              </div>
              <div class="vote-stats">
                <div class="vote-item">
                  <div class="vote-dot vote-for"></div>
                  <span>For: {{for}}</span>
                </div>
                <div class="vote-item">
                  <div class="vote-dot vote-against"></div>
                  <span>Against: {{against}}</span>
                </div>
                <div class="vote-item">
                  <div class="vote-dot vote-abstain"></div>
                  <span>Abstain: {{abstain}}</span>
                </div>
              </div>
              {{/with}}
            </div>

            <!-- On-Chain Votes -->
            <div class="vote-category">
              <div class="category-header">⛓️ On-Chain Votes</div>
              {{#with fulfilled_explain.output.votingBreakdown.onChainVotes}}
              <div class="vote-bar">
                {{#if (gt (add for against abstain) 0)}}
                <div class="vote-for" style="width: {{percentage for (add for against abstain)}}%"></div>
                <div class="vote-against" style="width: {{percentage against (add for against abstain)}}%"></div>
                <div class="vote-abstain" style="width: {{percentage abstain (add for against abstain)}}%"></div>
                {{/if}}
              </div>
              <div class="vote-stats">
                <div class="vote-item">
                  <div class="vote-dot vote-for"></div>
                  <span>For: {{formatWeight for}}</span>
                </div>
                <div class="vote-item">
                  <div class="vote-dot vote-against"></div>
                  <span>Against: {{formatWeight against}}</span>
                </div>
                <div class="vote-item">
                  <div class="vote-dot vote-abstain"></div>
                  <span>Abstain: {{formatWeight abstain}}</span>
                </div>
              </div>
              {{/with}}
            </div>

            <!-- Comment Sentiment -->
            <div class="vote-category">
              <div class="category-header">💬 Comment Sentiment</div>
              {{#with fulfilled_explain.output.votingBreakdown.twitterComments}}
              <div class="vote-bar">
                {{#if (gt (add positive negative neutral) 0)}}
                <div class="vote-for" style="width: {{percentage positive (add positive negative neutral)}}%"></div>
                <div class="vote-against" style="width: {{percentage negative (add positive negative neutral)}}%"></div>
                <div class="vote-abstain" style="width: {{percentage neutral (add positive negative neutral)}}%"></div>
                {{/if}}
              </div>
              <div class="vote-stats">
                <div class="vote-item">
                  <div class="vote-dot vote-for"></div>
                  <span>Positive: {{positive}}%</span>
                </div>
                <div class="vote-item">
                  <div class="vote-dot vote-against"></div>
                  <span>Negative: {{negative}}%</span>
                </div>
                <div class="vote-item">
                  <div class="vote-dot vote-abstain"></div>
                  <span>Neutral: {{neutral}}%</span>
                </div>
              </div>
              {{/with}}
            </div>
          </div>

          <!-- Reasoning Section -->
          <div class="reasoning-section">
            <h3 class="section-title">📝 Analysis & Decision</h3>

            <!-- Final Decision -->
            <div class="final-decision">
              <div class="decision-header">
                <h4>
                  🎯 Final Decision:
                  <span class="status-badge status-{{toLowerCase fulfilled_explain.output.finalResult}}">
                    {{fulfilled_explain.output.finalResult}}
                  </span>
                </h4>
                <div class="confidence-score">
                  <strong>Confidence: {{fulfilled_explain.output.confidence}}/10</strong>
                  <div class="confidence-bar">
                    <div class="confidence-fill" style="width: {{multiply fulfilled_explain.output.confidence 10}}%">
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Summary -->
            {{#if fulfilled_explain.output.reasoningLite}}
            <div class="reasoning-summary">
              <h4>📋 Executive Summary</h4>
              <div class="reasoning-summary-content">
                {{fulfilled_explain.output.reasoningLite}}
              </div>
            </div>
            {{/if}}

            <!-- Full Analysis -->
            {{#if fulfilled_explain.output.reasoning}}
            <div class="reasoning-full">
              <h4>📄 Detailed Analysis</h4>
              <div class="reasoning-full-content">
                {{{markdown fulfilled_explain.output.reasoning}}}
              </div>
            </div>
            {{/if}}
          </div>
        </div>
        {{/if}}
      </div>
    </div>
  </div>
  {{else}}
  <div class="no-data">
    <svg viewBox="0 0 24 24" fill="currentColor">
      <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>
    <h3>No vote results found</h3>
    <p>There are no governance proposals to display at this time.</p>
  </div>
  {{/if}}
</body>

</html>
